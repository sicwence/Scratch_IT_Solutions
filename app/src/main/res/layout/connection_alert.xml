<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#FF0D239C"
    android:orientation="vertical"
    android:padding="20dp">
    <ImageView
        android:id="@+id/no_internet_connection_image"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        app:srcCompat="@drawable/no_internet_symbol" />

    <TextView
        android:id="@+id/no_internet_connection_h1"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:text="@string/oops"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FCC0B8B8"
        android:textSize="44sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/no_internet_connection_h2"
        android:layout_width="match_parent"
        android:layout_height="99dp"

        android:text="@string/connection_error_message"

        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FCC0B8B8"

        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"

        android:text="@string/try_again"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@android:drawable/bottom_bar" />

</LinearLayout>